{
  "name": "nestjs-starter",
  "version": "1.0.0",
  "description": "Node.JS Backend starter kit powered in nestjs",
  "author": "behradz@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "homepage": "https://github.com/behrad/nestjs-starter#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/behrad/nestjs-starter.git"
  },
  "bugs": {
    "url": "https://github.com/behrad/nestjs-starter/issues"
  },
  "scripts": {
    "postinstall": "npx husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "console": "ts-node -r tsconfig-paths/register src/console.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down --remove-orphans --volumes"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@liaoliaots/nestjs-redis": "^5.2.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-fastify": "^8.2.4",
    "@nestjs/swagger": "^5.1.5",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "bcrypt": "^5.0.1",
    "chance": "^1.1.8",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "fastify-compress": "^4.0.1",
    "fastify-cookie": "^5.5.0",
    "fastify-helmet": "^5.3.2",
    "fastify-multer": "^2.0.2",
    "fastify-swagger": "^4.13.0",
    "ioredis": "^4.28.2",
    "mongoose": "^6.1.4",
    "multer": "^1.4.4",
    "nestjs-rate-limiter": "^3.1.0",
    "nodemailer": "^6.7.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pretty-print-ms": "^1.0.5",
    "purdy": "^3.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "stripe": "^8.195.0",
    "twilio": "^3.72.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.0.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.5",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*": "prettier -w -u"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
